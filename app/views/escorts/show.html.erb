<%= link_to "Back to the list", escorts_path, class:"btn btn-secondary"%>

<div class="escort-grid">


  <div class="escort-profile-card">
    <img id="es-profile-pic" src=<%= @escort.photos %> width="100%">
    <div class="escort-profile-card-infos">
      <%= link_to "", new_escort_reservation_path(@escort), class:"btn btn-gradient pull-right far fa-calendar-check" %>
      <p><h2><strong> Pseudo: </strong><%= @escort.pseudo.capitalize %></h2><p>
      <p><strong> Status: </strong><%= @escort.status %><p>
      <p><strong> Gender: </strong><%= @escort.gender%><p>
      <p><strong> Age: </strong><%= @escort.age %> years old<p>
      <p><strong> Price: </strong><%= @escort.price %> â‚¬<p>
      <p><strong> City: </strong><%= @escort.city %>
      <p><strong> Services: </strong><ul><% @escort.service.tr('[]', '').tr('"', '').split(',').each do |element| %><p>
          <p><%= element %></p>
          <% end %></ul>
      <p><strong> Contact: </strong><%= @escort.contact %><p>
    </div>
  </div>

  <div class="escort-pics">
    <img class="es-pics" src=<%= @escort.photos %> width="45%">
    <img class="es-pics" src=<%= @escort.photos %> width="45%">
    <img class="es-pics" src=<%= @escort.photos %> width="45%">
    <img class="es-pics" src=<%= @escort.photos %> width="45%">
  </div>


  <div class="escort-reviews">
    <p><strong>Previous reviews for <%= @escort.pseudo.capitalize %></strong></p>

    <% if @escort.reviews.blank? %>
      <li> No existing reviews, be the first one and book an appointment! </li>
    <% else %>
      <ol>
      <% @escort.reviews.each do |review| %>
        <li>Rating: <%= review.rating %> & Comments: <%= review.content %></li>
        <br>
      <% end %>
    <% end%>

      </ol>
  </div>

</div>