
    <div class="row justify-content-center">
      <h1>Create a review for <%= @reservation.escort.pseudo.capitalize %></h1></div>
    <div class="d-flex p-2">
      <div class="form-group" >
          <ul>
            <div class="col-sm-4"> Reservation ID: <%= @reservation.id %></div>
            <div class="col-sm-4"> Reservation date: <%= @reservation.date %></div>
            <div class="col-sm-4"> Reservation status: <%= @reservation.status %></div>
          </ul>
      </div>
      <div class="form-group">
        <%= simple_form_for ([@reservation, @review]) do |f| %>
          <%= f.input :content %>
      </div>
      <div class="form-group">
          <%= f.input :rating, :collection => 1..5 %>
      </div>
      <div class="form-group" >
          <%= f.submit "add a review", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
